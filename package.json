{
  "private": true,
  "name": "bookworm",
  "description": "A useful book web app for book lovers written in Remix",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielvanc/bookworm.git"
  },
  "bugs": {
    "url": "https://github.com/danielvanc/bookworm/issues"
  },
  "homepage": "https://github.com/danielvanc/bookworm#readme",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --minify",
    "run-remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "dev": "concurrently \"npm run dev:css\" \"node -r dotenv/config node_modules/.bin/remix dev\"",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --watch",
    "commit": "cz",
    "test": "jest --watch",
    "coverage": "jest run --coverage",
    "prepare": "husky install",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "start:mocks": "cross-env NODE_ENV=production node --require ./mocks",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e:dev": "cross-env RUNNING_E2E=true ENABLE_TEST_ROUTES=true start-server-and-test dev http-get://localhost:3000 cy:open",
    "test:e2e:run": "cross-env RUNNING_E2E=true PORT=8811 start-server-and-test start:mocks http-get://localhost:8811/build/info.json cy:run",
    "typecheck": "tsc -b",
    "validate": "./other/validate"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.6",
    "@prisma/client": "^4.1.0",
    "@remix-run/node": "^1.7.4",
    "@remix-run/react": "^1.7.4",
    "@remix-run/serve": "^1.7.4",
    "@remix-run/vercel": "^1.7.4",
    "@supabase/supabase-js": "^1.31.1",
    "@vercel/analytics": "^0.1.3",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "esbuild": "^0.15.12",
    "framer-motion": "^6.2.8",
    "i": "^0.3.7",
    "ioredis": "^5.2.3",
    "node-fetch": "^2.6.7",
    "npm": "^8.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1",
    "remix-auth": "^3.2.2",
    "remix-auth-supabase": "^4.0.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@remix-run/dev": "^1.7.4",
    "@remix-run/eslint-config": "^1.7.4",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.0",
    "@types/node-fetch": "^2.6.2",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/redis": "^4.0.11",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "cypress": "^9.5.2",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^7.6.0",
    "@happy-dom/jest-environment": "^7.6.0",
    "jest-environment-jsdom": "^29.2.1",
    "husky": "^7.0.4",
    "jest": "^29.2.1",
    "jest-watch-typeahead": "^2.2.0",
    "msw": "^0.47.4",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "prisma": "^4.1.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^29.0.3",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14",
    "npm": "8"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "sideEffects": false
}
