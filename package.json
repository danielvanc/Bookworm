{
  "private": true,
  "name": "bookworm",
  "description": "A useful book web app for book lovers written in Remix",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielvanc/bookworm.git"
  },
  "bugs": {
    "url": "https://github.com/danielvanc/bookworm/issues"
  },
  "homepage": "https://github.com/danielvanc/bookworm#readme",
  "scripts": {
    "build": "prisma generate && remix build",
    "dev": "remix dev",
    "commit": "cz",
    "test": "vitest",
    "prepare": "husky install",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "test:e2e:dev": "playwright test",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "npx playwright install chromium --with-deps",
    "typecheck": "tsc -b",
    "validate": "./other/validate",
    "postinstall": "prisma generate"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report"
  ],
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^2.0.13",
    "@prisma/client": "^4.1.0",
    "@remix-run/node": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "@remix-run/serve": "^2.0.0",
    "@supabase/auth-helpers-remix": "^0.2.1",
    "@supabase/supabase-js": "^2.33.2",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.0",
    "esbuild": "^0.19.3",
    "framer-motion": "^6.2.8",
    "i": "^0.3.7",
    "ioredis": "^5.2.3",
    "isbot": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright/test": "^1.32.1",
    "@remix-run/dev": "^2.0.0",
    "@remix-run/eslint-config": "^2.0.0",
    "@remix-run/testing": "^2.0.0",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/ui": "^0.29.8",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "jsdom": "^21.1.1",
    "msw": "^1.2.1",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "prisma": "^4.1.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vite-tsconfig-paths": "^4.0.7",
    "vitest": "^0.29.7",
    "whatwg-fetch": "^3.6.2"
  },
  "engines": {
    "node": "^18.16.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "sideEffects": false,
  "msw": {
    "workerDirectory": "public"
  }
}
